# Banking System Application - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =================
# Datadog Configuration
# =================
# Your Datadog API Key (required for APM and metrics)
# Get it from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key_here

# Datadog site (optional, defaults to us5.datadoghq.com)
DD_SITE=us5.datadoghq.com

# Service configuration
DD_SERVICE=banking-system
DD_ENV=local
DD_VERSION=1.0.0

# Additional Datadog settings
DD_LOGS_INJECTION=true
DD_TRACE_SAMPLE_RATE=1
DD_PROFILING_ENABLED=true

# =================
# Database Configuration
# =================
DATABASE_URL=jdbc:postgresql://localhost:5432/banking_system
DATABASE_USERNAME=banking_user
DATABASE_PASSWORD=banking_password

# =================
# Kafka Configuration
# =================
KAFKA_SERVERS=localhost:9092

# =================
# Application Configuration
# =================
APP_NAME=Banking System Application
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
SERVER_PORT=8080

# =================
# Performance Tuning
# =================
MAX_THREADS=200
MIN_THREADS=10
CPU_THRESHOLD=70.0
CONNECTION_THRESHOLD=100

# =================
# Logging Configuration
# =================
LOG_LEVEL=INFO

# =================
# Spring Profiles
# =================
SPRING_PROFILES_ACTIVE=default